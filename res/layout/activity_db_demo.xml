<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@null" >

        <Button
            android:id="@+id/btn_db_demo_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="插入" />

        <Button
            android:id="@+id/btn_db_demo_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询" />

        <Button
            android:id="@+id/btn_db_demo_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除" />

        <Button
            android:id="@+id/btn_db_demo_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改" />

        <Button
            android:id="@+id/btn_db_demo_delete_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除表" />

        <Button
            android:id="@+id/btn_db_demo_delete_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除库" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_db_demo_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="TextView" />

</RelativeLayout>